@model RMS.ViewModel.Students.StudentVM
@{
    ViewData["Title"] = "Details";
}

<div class="page-wrapper">
    <div class="content container-fluid">

        <div class="page-header mt-5">
            <div class="row">
                <div class="col">
                    <h3 class="page-title">Profile</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                        <li class="breadcrumb-item active">Profile</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="profile-header">
                    <div class="row align-items-center">
                        <div class="col-auto profile-image">
                            <a href="#">
                                <img class="rounded-circle" alt="User Image" src="~/StudentIMG/@Model.PhotoPath">
                            </a>
                        </div>
                        <div class="col ml-md-n2 profile-user-info">
                            <h4 class="user-name mb-3">@Model.FirstName @Model.LastName</h4>
                            <h6 class="text-muted mt-1">Student</h6>
                            <div class="user-Location mt-1">
                                <i class="fas fa-map-marker-alt"></i> Lagos, Nigeria
                            </div>
                            <div class="about-text">
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed
                                do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                            </div>
                        </div>
                        <div class="col-auto profile-btn">
                            @*<a href="#" class="btn btn-primary">
                                    Message
                                </a>*@
                            <a class="btn btn-primary" data-toggle="modal" href="#edit_personal_details"><i class="fa fa-edit mr-1"></i>Edit</a>
                           
                        </div>
                    </div>
                </div>
                <div class="profile-menu">
                    <ul class="nav nav-tabs nav-tabs-solid">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#per_details_tab">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#password_tab">Password</a>
                        </li>
                    </ul>
                </div>
                <div class="tab-content profile-tab-cont">

                    <div class="tab-pane fade show active" id="per_details_tab">

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title d-flex justify-content-between">
                                            <span>Basic Details</span>
                                        </h5>
                                        <div class="row mt-5">
                                            <p class="col-sm-3 text-sm-right mb-0 mb-sm-3">Name</p>
                                            <p class="col-sm-9">@Model.FirstName @Model.LastName</p>
                                        </div>
                                        <div class="row">
                                            <p class="col-sm-3 text-sm-right mb-0 mb-sm-3">
                                                Matric No
                                            </p>
                                            <p class="col-sm-9">@Model.MatricNumber</p>
                                        </div>
                                        <div class="row">
                                            <p class="col-sm-3 text-sm-right mb-0 mb-sm-3">
                                                Department
                                            </p>
                                            <p class="col-sm-9">@Model.Department</p>
                                        </div>
                                        <div class="row">
                                            <p class="col-sm-3 text-sm-right mb-0 mb-sm-3">
                                                Admission Year
                                            </p>
                                            <p class="col-sm-9">@Model.AdmissionYear</p>
                                        </div>
                                        <div class="row">
                                            <p class="col-sm-3 text-sm-right mb-0 mb-sm-3">
                                                Email ID
                                            </p>
                                            <p class="col-sm-9">@Model.Email</p>
                                        </div>
                                        <div class="row">
                                            <p class="col-sm-3 text-sm-right mb-0">Gender</p>
                                            <p class="col-sm-9">
                                                @Model.Gender
                                            </p>
                                        </div>
                                        <div class="row">
                                            <p class="col-sm-3 text-sm-right mb-0 mb-sm-3">Mobile</p>
                                            <p class="col-sm-9">@Model.PhoneNumber</p>
                                        </div>
                                        <div class="row">
                                            <p class="col-sm-3 text-sm-right mb-0 mb-sm-3">Religion</p>
                                            <p class="col-sm-9">@Model.Religion</p>
                                        </div>

                                    </div>
                                </div>

                                <div class="modal fade" id="edit_personal_details" aria-hidden="true" role="dialog">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Basic Details</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <form asp-action="Edit" asp-controller="Student" asp-route-id="@Model.StudentId" method="post" enctype="multipart/form-data">
                                                    <div class="row form-row">
                                                        <div class="col-12 col-sm-1">
                                                            <img id="imageShown" alt="your image"  style="height:120px; width:100px;" src="~/StudentIMG/@Model.PhotoPath" />
                                                            <br />
                                                            <br />
                                                        </div>


                                                        <div class="col-12 col-sm-6" style="margin-left:170px; padding-bottom:30px;">
                                                            <input asp-for="StudentId" type="hidden" />
                                                            <input asp-for="PhotoPath" type="hidden" />
                                                            <div class="form-group">
                                                                <label>Update Image</label>
                                                                <input type="file" onchange="document.getElementById('imageShown').src = window.URL.createObjectURL(this.files[0])" asp-for="PhotoPath" value="@Model.PhotoPath" class="form-control">
                                                                <span asp-validation-for="PhotoPath" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6">
                                                            <input asp-for="StudentId" type="hidden" />
                                                            <div class="form-group">
                                                                <label>First Name</label>
                                                                <input class="form-control" type="text" asp-for="FirstName">
                                                                <span asp-validation-for="FirstName" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6">
                                                            <input asp-for="StudentId" type="hidden" />
                                                            <div class="form-group">
                                                                <label>Last Name</label>
                                                                <input class="form-control" type="text" asp-for="LastName">
                                                                <span asp-validation-for="LastName" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6">
                                                            <input asp-for="StudentId" type="hidden" />
                                                            <div class="form-group">
                                                                <label>Matric Number</label>
                                                                <input class="form-control" type="text" asp-for="MatricNumber">
                                                                <span asp-validation-for="MatricNumber" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6">
                                                            <input asp-for="StudentId" type="hidden" />
                                                            <div class="form-group">
                                                                <label>Department</label>
                                                                <input class="form-control" type="text" asp-for="Department">
                                                                <span asp-validation-for="Department" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-12">
                                                            <input asp-for="StudentId" type="hidden" />
                                                            <div class="form-group">
                                                                <label>Admission year</label>
                                                                <select asp-for="AdmissionYear" class="form-control">
                                                                    <option>Select Year</option>
                                                                    <option>2000</option>
                                                                    <option>2001</option>
                                                                    <option>2002</option>
                                                                    <option>2003</option>
                                                                    <option>2004</option>
                                                                    <option>2005</option>
                                                                    <option>2006</option>
                                                                    <option>2007</option>
                                                                    <option>2008</option>
                                                                    <option>2009</option>
                                                                    <option>2010</option>
                                                                    <option>2011</option>
                                                                    <option>2012</option>
                                                                    <option>2013</option>
                                                                    <option>2014</option>
                                                                    <option>2015</option>
                                                                    <option>2016</option>
                                                                    <option>2017</option>
                                                                    <option>2018</option>
                                                                    <option>2019</option>
                                                                    <option>2020</option>
                                                                    <option>2021</option>
                                                                    <option>2022</option>
                                                                    <option>2023</option>
                                                                    <option>2024</option>
                                                                    <option>2025</option>
                                                                    <option>2026</option>
                                                                    <option>2027</option>
                                                                    <option>2028</option>
                                                                    <option>2029</option>
                                                                    <option>2030</option>
                                                                    <option>2031</option>
                                                                    <option>2032</option>
                                                                    <option>2033</option>
                                                                    <option>2034</option>
                                                                    <option>2035</option>
                                                                    <option>2036</option>
                                                                    <option>2037</option>
                                                                    <option>2038</option>
                                                                    <option>2039</option>
                                                                    <option>2040</option>
                                                                    <option>2041</option>
                                                                    <option>2042</option>
                                                                    <option>2043</option>
                                                                    <option>2044</option>
                                                                    <option>2045</option>
                                                                    <option>2046</option>
                                                                    <option>2047</option>
                                                                    <option>2048</option>
                                                                    <option>2049</option>
                                                                    <option>2050</option>
                                                                </select>
                                                                <span asp-validation-for="AdmissionYear" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6">
                                                            <input asp-for="StudentId" type="hidden" />
                                                            <div class="form-group">
                                                                <label>Email </label>
                                                                <input class="form-control" type="text" asp-for="Email">
                                                                <span asp-validation-for="Email" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6">
                                                            <input asp-for="StudentId" type="hidden" />
                                                            <div class="form-group">
                                                                <label>Gender</label>
                                                                <select asp-for="Gender" class="form-control">
                                                                    <option>Select Gender</option>
                                                                    <option>Male</option>
                                                                    <option>Female</option>
                                                                    <option>Others</option>
                                                                </select>
                                                                <span asp-validation-for="Gender" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6">
                                                            <input asp-for="StudentId" type="hidden" />
                                                            <div class="form-group">
                                                                <label>Phone</label>
                                                                <input class="form-control" type="text" asp-for="PhoneNumber">
                                                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6">
                                                            <input asp-for="StudentId" type="hidden" />
                                                            <div class="form-group">
                                                                <label>Religion</label>
                                                                <select asp-for="Religion" class="form-control">
                                                                    <option>Select Religion</option>
                                                                    <option>Christian</option>
                                                                    <option>Muslim</option>
                                                                    <option>Others</option>
                                                                </select>
                                                                <span asp-validation-for="Religion" class="text-danger"></span>
                                                            </div>
                                                        </div>

                                                        <div class="col-12">
                                                            <h5 class="form-title"><span>Personal Details</span></h5>
                                                        </div>
                                                        <div class="col-12">
                                                            <input asp-for="StudentId" type="hidden" />
                                                            <div class="form-group">
                                                                <label>Date of Birth</label>
                                                                <input class="form-control" type="date" asp-for="DateofBirth">
                                                                <span asp-validation-for="DateofBirth" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6">
                                                            <input asp-for="StudentId" type="hidden" />
                                                            <div class="form-group">
                                                                <label>Age</label>
                                                                <input class="form-control" type="text" asp-for="Age">
                                                                <span asp-validation-for="Age" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6">
                                                            <input asp-for="StudentId" type="hidden" />
                                                            <div class="form-group">
                                                                <label>Address</label>
                                                                <input class="form-control" type="text" asp-for="Address">
                                                                <span asp-validation-for="Address" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6">
                                                            <input asp-for="StudentId" type="hidden" />
                                                            <div class="form-group">
                                                                <label>Parent Name</label>
                                                                <input class="form-control" type="text" asp-for="ParentName">
                                                                <span asp-validation-for="ParentName" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6">
                                                            <input asp-for="StudentId" type="hidden" />
                                                            <div class="form-group">
                                                                <label>Parent Email</label>
                                                                <input class="form-control" type="text" asp-for="ParentEmail">
                                                                <span asp-validation-for="ParentEmail" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6">
                                                            <input asp-for="StudentId" type="hidden" />
                                                            <div class="form-group">
                                                                <label>Parent Address</label>
                                                                <input class="form-control" type="text" asp-for="ParentAddress">
                                                                <span asp-validation-for="ParentAddress" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6">
                                                            <input asp-for="StudentId" type="hidden" />
                                                            <div class="form-group">
                                                                <label>Parent Phone</label>
                                                                <input class="form-control" type="text" asp-for="ParentPhoneNo">
                                                                <span asp-validation-for="ParentPhoneNo" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6">
                                                            <input asp-for="StudentId" type="hidden" />
                                                            <div class="form-group">
                                                                <label>Parent Occupation</label>
                                                                <input class="form-control" type="text" asp-for="ParentOccupation">
                                                                <span asp-validation-for="ParentOccupation" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <button type="submit" class="btn btn-primary btn-block">
                                                        Save
                                                        Changes
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="col-lg-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title d-flex justify-content-between">
                                            <span>Personal Details</span>
                                        </h5>

                                        <div class="row mt-5">
                                            <p class="col-sm-3 text-sm-right mb-0 mb-sm-3">
                                                Date of
                                                Birth
                                            </p>
                                            <p class="col-sm-9">@Model.DateofBirth</p>
                                        </div>
                                        <div class="row">
                                            <p class="col-sm-3 text-sm-right mb-0 mb-sm-3">
                                                Age
                                            </p>
                                            <p class="col-sm-9"> @Model.Age</p>
                                        </div>
                                        <div class="row">
                                            <p class="col-sm-3 text-sm-right mb-0 mb-sm-3">
                                                Address
                                            </p>
                                            <p class="col-sm-9"> @Model.Address</p>
                                        </div>
                                        <div class="row">
                                            <p class="col-sm-3 text-sm-right mb-0 mb-sm-3">Parent Name</p>
                                            <p class="col-sm-9">@Model.ParentName</p>
                                        </div>
                                        <div class="row">
                                            <p class="col-sm-3 text-sm-right mb-0 mb-sm-3">Parent Email</p>
                                            <p class="col-sm-9 mb-0">
                                                @Model.ParentEmail
                                            </p>
                                        </div>
                                        <div class="row">
                                            <p class="col-sm-3 text-sm-right mb-0 mb-sm-3">Parent Adress</p>
                                            <p class="col-sm-9 mb-0">
                                                @Model.ParentAddress
                                            </p>
                                        </div>
                                        <div class="row">
                                            <p class="col-sm-3 text-sm-right mb-0 mb-sm-3">Parent Phone</p>
                                            <p class="col-sm-9 mb-0">
                                                @Model.ParentPhoneNo
                                            </p>
                                        </div>
                                        <div class="row">
                                            <p class="col-sm-3 text-sm-right mb-0 mb-sm-3">Parent Occupation</p>
                                            <p class="col-sm-9 mb-0">
                                                @Model.ParentOccupation
                                            </p>
                                        </div>

                                    </div>
                                </div>


                            </div>
                        </div>

                    </div>


                    <div id="password_tab" class="tab-pane fade">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Change Password</h5>
                                <div class="row">
                                    <div class="col-md-10 col-lg-6">
                                        <form>
                                            <div class="form-group">
                                                <label>Old Password</label>
                                                <input type="password" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label>New Password</label>
                                                <input type="password" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label>Confirm Password</label>
                                                <input type="password" class="form-control">
                                            </div>
                                            <button class="btn btn-primary" type="submit">Save Changes</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
