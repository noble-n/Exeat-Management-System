@model RMS.ViewModel.Students.StudentVM


<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title mt-5">Edit Profile</h3>
                </div>
            </div>
        </div>
        <form asp-action="Edit" asp-controller="Student" asp-route-id="@Model.StudentId" method="post" enctype="multipart/form-data">
            <div class="box inform_css">
                <p class="card-title title_menu">Basic Informations</p>

                <div class="row">
                    <div class="col-lg-12">

                        <div class="row formtype">
                            <div class="col-12 col-sm-1">
                                <img id="imageShown" alt="your image" style="height:120px; width:100px;" src="~/StudentIMG/@Model.PhotoPath" />
                                <br />
                                <br />
                            </div>


                            <div class="col-12 col-sm-6" style="margin-left:170px; padding-bottom:30px;">
                                <input asp-for="StudentId" type="hidden" />
                                <input asp-for="PhotoPath" type="hidden" />
                                <div class="form-group">
                                    <label>Update Image</label>
                                    <input type="file" onchange="document.getElementById('imageShown').src = window.URL.createObjectURL(this.files[0])" asp-for="PhotoPath" value="@Model.PhotoPath" class="form-control">
                                    <span asp-validation-for="PhotoPath" class="text-danger"></span>
                                </div>
                            </div>
                            <div style="margin-top:20px;">

                            </div>
                            <div class="col-md-4">
                                <input asp-for="StudentId" type="hidden" />
                                <div class="form-group">
                                    <label>First Name</label>
                                    <input class="form-control" type="text" asp-for="FirstName">
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="StudentId" type="hidden" />
                                <div class="form-group">
                                    <label>First Name</label>
                                    <input class="form-control" type="text" asp-for="LastName">
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="StudentId" type="hidden" />
                                <div class="form-group">
                                    <label>Matric Number</label>
                                    <input class="form-control" type="text" asp-for="MatricNumber">
                                    <span asp-validation-for="MatricNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="StudentId" type="hidden" />
                                <div class="form-group">
                                    <label>Department</label>
                                    <input class="form-control" type="text" asp-for="Department">
                                    <span asp-validation-for="Department" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="StudentId" type="hidden" />
                                <div class="form-group">
                                    <label>Admission year</label>
                                    <select asp-for="AdmissionYear" class="form-control">
                                        <option>Select Year</option>
                                        <option>2000</option>
                                        <option>2001</option>
                                        <option>2002</option>
                                        <option>2003</option>
                                        <option>2004</option>
                                        <option>2005</option>
                                        <option>2006</option>
                                        <option>2007</option>
                                        <option>2008</option>
                                        <option>2009</option>
                                        <option>2010</option>
                                        <option>2011</option>
                                        <option>2012</option>
                                        <option>2013</option>
                                        <option>2014</option>
                                        <option>2015</option>
                                        <option>2016</option>
                                        <option>2017</option>
                                        <option>2018</option>
                                        <option>2019</option>
                                        <option>2020</option>
                                        <option>2021</option>
                                        <option>2022</option>
                                        <option>2023</option>
                                        <option>2024</option>
                                        <option>2025</option>
                                        <option>2026</option>
                                        <option>2027</option>
                                        <option>2028</option>
                                        <option>2029</option>
                                        <option>2030</option>
                                        <option>2031</option>
                                        <option>2032</option>
                                        <option>2033</option>
                                        <option>2034</option>
                                        <option>2035</option>
                                        <option>2036</option>
                                        <option>2037</option>
                                        <option>2038</option>
                                        <option>2039</option>
                                        <option>2040</option>
                                        <option>2041</option>
                                        <option>2042</option>
                                        <option>2043</option>
                                        <option>2044</option>
                                        <option>2045</option>
                                        <option>2046</option>
                                        <option>2047</option>
                                        <option>2048</option>
                                        <option>2049</option>
                                        <option>2050</option>
                                    </select>
                                    <span asp-validation-for="AdmissionYear" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="StudentId" type="hidden" />
                                <div class="form-group">
                                    <label>Email </label>
                                    <input class="form-control" type="text" asp-for="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="StudentId" type="hidden" />
                                <div class="form-group">
                                    <label>Gender</label>
                                    <select asp-for="Gender" class="form-control">
                                        <option>Select Gender</option>
                                        <option>Male</option>
                                        <option>Female</option>
                                        <option>Others</option>
                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="StudentId" type="hidden" />
                                <div class="form-group">
                                    <label>Phone</label>
                                    <input class="form-control" type="text" asp-for="PhoneNumber">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="StudentId" type="hidden" />
                                <div class="form-group">
                                    <label>Religion</label>
                                    <select asp-for="Religion" class="form-control">
                                        <option>Select Religion</option>
                                        <option>Christian</option>
                                        <option>Muslim</option>
                                        <option>Others</option>
                                    </select>
                                    <span asp-validation-for="Religion" class="text-danger"></span>
                                </div>
                            </div>

                         </div>
                     </div>
                </div>
            </div>
            <div class="box inform_css mt-3">
                <p class="card-title title_menu">Personal Informations</p>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row formtype">
                            <div class="col-md-12">
                                <input asp-for="StudentId" type="hidden" />
                                <div class="form-group">
                                    <label>Address</label>
                                    <input class="form-control" type="text" asp-for="Address">
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="StudentId" type="hidden" />
                                <div class="form-group">
                                    <label>Age</label>
                                    <input class="form-control" type="text" asp-for="Age">
                                    <span asp-validation-for="Age" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="StudentId" type="hidden" />
                                <div class="form-group">
                                    <label>Date of Birth</label>
                                    <input class="form-control" type="date" asp-for="DateofBirth">
                                    <span asp-validation-for="DateofBirth" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="StudentId" type="hidden" />
                                <div class="form-group">
                                    <label>Parent Name</label>
                                    <input class="form-control" type="text" asp-for="ParentName">
                                    <span asp-validation-for="ParentName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="StudentId" type="hidden" />
                                <div class="form-group">
                                    <label>Parent Email</label>
                                    <input class="form-control" type="text" asp-for="ParentEmail">
                                    <span asp-validation-for="ParentEmail" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="StudentId" type="hidden" />
                                <div class="form-group">
                                    <label>Parent Address</label>
                                    <input class="form-control" type="text" asp-for="ParentAddress">
                                    <span asp-validation-for="ParentAddress" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="StudentId" type="hidden" />
                                <div class="form-group">
                                    <label>Parent Phone</label>
                                    <input class="form-control" type="text" asp-for="ParentPhoneNo">
                                    <span asp-validation-for="ParentPhoneNo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="StudentId" type="hidden" />
                                <div class="form-group">
                                    <label>Parent Occupation</label>
                                    <input class="form-control" type="text" asp-for="ParentOccupation">
                                    <span asp-validation-for="ParentOccupation" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary buttonedit mt-3" style="margin-bottom:20px;">Save Changes</button>
        </form>
    </div>
</div>