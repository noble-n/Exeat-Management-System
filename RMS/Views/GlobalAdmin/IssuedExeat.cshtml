@model IEnumerable<RMS.ViewModels.Records.RecordsVM>

    @{
        var rowIndex = 1;
    }

    <div class="page-wrapper">
        <div class="content container-fluid">

            <div class="page-header">

                <div class="row align-items-center">
                    <div class="col">
                        <div class="mt-5">

                            <h4 class="card-title float-left mt-2">Issued Exeat</h4>
                            <a asp-action="Create" class="btn btn-primary float-right veiwbutton">Add Student</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="col-sm-12">

                    <div class="card card-table">

                        <div class="card-body booking_card">

                            <div class="table-responsive">
                                <table class="datatable table table-stripped table table-hover table-center mb-0">
                                    <thead>
                                        <tr>
                                            <th>S/N</th>

                                            <th>Img</th>
                                            <th>Full Name</th>
                                            <th>Matric Number</th>
                                            <th>Department</th>
                                            <th>Email</th>
                                            <th>Exeat Date</th>
                                            <th>Expected Return from Exeat</th>
                                            <th>Exeat Reason</th>
                                            <th>Status</th>
                                            <th class="text-right">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>@(rowIndex++)</td>

                                            <td>
                                                <h2 class="table-avatar">
                                                    <a asp-action="Details" asp-controller="Student" asp-route-id="@item.StudentId" class="avatar avatar-sm mr-2"><img class="avatar-img rounded-circle" src="~/StudentIMG/@item.PhotoPath" alt="User Image"></a>
                                                    <a href="profile.html"></a>
                                                </h2>
                                            </td>
                                            <td>@item.FirstName @item.LastName</td>
                                            <td>@item.MatricNumber</td>
                                            <td>@item.Department</td>
                                            <td>@item.Email</td>
                                            <td>@item.ExpectedExitDate</td>
                                            <td>@item.ExpectedReturnFromExeateDate</td>
                                            <td>@item.ExeatReason</td>
                                            @if (item.IsSignedIn == true)
                                            {
                                                <td>
                                                    <div class="actions">
                                                        <a href="#" class="btn btn-sm bg-success-light mr-2">
                                                            Signed-In
                                                        </a>
                                                    </div>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <div class="actions">
                                                        <a href="#" class="btn btn-sm bg-danger-light mr-2">
                                                            Signed-Out
                                                        </a>
                                                    </div>
                                                </td>
                                            }


                                            <td>
                                                @*<button onclick="OpenSignOutModal(@item.StudentId)" data-toggle="modal" data-target="#signout_asset" class="btn btn-primary"><i class="fa fa-edit mr-1"></i>SIGN OUT</button>*@
                                                <a asp-action="Approve" asp-route-id="@item.ExeatRecordsId" class="btn btn-success"><i class="fa fa-edit mr-1"></i>APPROVE</a>
                                                <a asp-action="DisApprove" asp-route-id="@item.ExeatRecordsId" class="btn btn-danger"><i class="fa fa-edit mr-1"></i>DISAPPROVE</a>
                                            </td>

                                        </tr>
                                          }


                                     </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
@if (ViewBag.search != null)
{
    <a asp-action="StudentList" class="btn btn-primary float-right veiwbutton">See All</a>

}

    </div>
</div>

