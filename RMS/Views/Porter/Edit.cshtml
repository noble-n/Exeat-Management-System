@model RMS.ViewModel.Porters.UpdatePorterVM


<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title mt-5">Edit Profile</h3>
                </div>
            </div>
        </div>
        <form asp-action="Edit" asp-controller="Porter" asp-route-id="@Model.PorterId" method="post" enctype="multipart/form-data">
            <div class="box inform_css">
                <p class="card-title title_menu">Porter's Informations</p>

                <div class="row">
                    <div class="col-lg-12">

                        <div class="row formtype">
                            <div class="col-12 col-sm-1">
                                <img id="imageShown" alt="your image" style="height:120px; width:100px;" src="~/StudentIMG/@Model.PhotoPath" />
                                <br />
                                <br />
                            </div>


                            <div class="col-12 col-sm-6" style="margin-left:170px; padding-bottom:30px;">
                                <input asp-for="PorterId" type="hidden" />
                                <input asp-for="PhotoPath" type="hidden" />
                                <div class="form-group">
                                    <label>Update Image</label>
                                    <input type="file" onchange="document.getElementById('imageShown').src = window.URL.createObjectURL(this.files[0])" asp-for="PhotoPath" value="@Model.PhotoPath" class="form-control">
                                    <span asp-validation-for="PhotoPath" class="text-danger"></span>
                                </div>
                            </div>
                            <div style="margin-top:20px;">

                            </div>
                            <div class="col-md-4">
                                <input asp-for="PorterId" type="hidden" />
                                <div class="form-group">
                                    <label>Full Name</label>
                                    <input class="form-control" type="text" asp-for="FullName">
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="PorterId" type="hidden" />
                                <div class="form-group">
                                    <label>Email</label>
                                    <input class="form-control" type="text" asp-for="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <input asp-for="PorterId" type="hidden" />
                                <div class="form-group">
                                    <label>Matric Number</label>
                                    <input class="form-control" type="text" asp-for="PhoneNumber">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                           

                        </div>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary buttonedit mt-3" style="margin-bottom:20px;">Save Changes</button>
        </form>
    </div>
</div>