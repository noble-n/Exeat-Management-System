                                            <p class="col-sm-9">@ViewBag.AdmissionYear</p>
                                        </div>
                                        <div class="row">
                                            <p class="col-sm-3 text-sm-right mb-0 mb-sm-3">
                                                Email ID
                                            </p>
                                            <p class="col-sm-9">@ViewBag.Email</p>
                                        </div>
                                        <div class="row">
                                            <p class="col-sm-3 text-sm-right mb-0">Gender</p>
                                            <p class="col-sm-9">
